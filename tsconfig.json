{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    /* Path mapping */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    },

    /* Types */
    "types": ["vite/client", "node"]
  },
  "include": [
    "src",
    "App.tsx",
    "components",
    "services",
    "styles"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "vite.config.ts",
    "postcss.config.js",
    "tailwind.config.js"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}